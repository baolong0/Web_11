@model LichThiDauViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    DateTime aDateTime = DateTime.Now;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" , content="ie=edge">
    <link rel="stylesheet" href="~/css/Lich_thi_dau.css">

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.0/animate.min.css">
    <title> LỊCH THI ĐẤU </title>

</head>
<body>
    <div class="container mt-5">

        <div class="row Tieu-de">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <h1 align="center"> Lịch thi đấu mùa giải 2020 </h1>
                <div class="row m-2">
                    <p>
                        Do ảnh hưởng của đại dịch Covid, các trận đấu vòng loại World Cup bị lùi sang năm 2021.
                        Sự kiện được mong chờ nhất năm nay là AFF Cup 2020 cũng bị hoãn.
                        Cùng cập nhật thông tin những trận đấu mới nhất tại đây.
                    </p>
                </div>
            </div>
        </div>

        <div class="row Lich">

            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 ">

                <div class="row lich1">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="row">
                            <div class="col-xs-8 col-sm-12 col-md-12 col-lg-8">
                                <h2 align="left"> Lịch thi đấu bóng đá hôm nay </h2>
                            </div>
                            <div class="col-xs-4 col-sm-5  col-md-5 col-lg-4 ">

                                <!--Datepicker-->
                                <input id="datepicker">
                                    
                                    <script>
                                    $('#datepicker').datepicker({
                                    uiLibrary: 'bootstrap4',
                                        datepicker: true,
                                        form: 'dd-MM-yyyy',
                                        value: '@aDateTime.Day-@aDateTime.Month-@aDateTime.Year',
                                        week: true
                                    });
                                    </script>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4 bang">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="table-responsive-md">
                            <table class="table">
                                <thead class="thead">
                                    <tr>
                                        <th scope="col" width="15%"> Thời gian </th>
                                        <th scope="col" width="45%"> Trận đấu </th>
                                        <th scope="col" width="25%"> Sân đấu </th>
                                        <th scope="col" width="15%"> Kết quả </th>
                                    </tr>
                                </thead>
                                <tbody id="mytable">
                                    @foreach (var item in Model.listLTD)
                                    {
                                        if (item.TranDau != null)
                                        {
                                            <tr> <td colspan="4" align="left"> <font color="red"> <b> @item.Thoigian </b> </td> </tr>
                                            <tr>
                                                <td> @item.Gio </td>
                                                <td> <b>@item.srcDoiNha</b> vs <b>@item.srcDoiKhach</b> </td>
                                                <td> @item.svd </td>
                                                <td> @item.tiso </td>
                                            </tr>
                                        }


                                    }
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                <div class="row sale">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="margin">
                            <div class="row text-center">
                                <div class="SAN_SALE">
                                    <h3> Săn sale </h3>
                                </div>

                            </div>

                            <div class="row mt-4">

                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="card card-Common-responsive">
                                        <a href="#">
                                            <img class="card-img-top img-fluid" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcRl_lNw_QePdM2xKu2BX8nDq0mLDVWDhjS-EA&usqp=CAU" />
                                            <div class="card-body">
                                                <p class="card-title"> Mua vé online ngay hôm nay </p>
                                            </div>
                                        </a>
                                    </div>
                                </div>


                            </div>
                            <div class="row mt-2">

                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="card card-Common-responsive">
                                        <a href="#">
                                            <img class="card-img-top img-fluid" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcT2A9y2Lj8-caubbpeXtmifTQ16otOMVUrvrQ&usqp=CAU" />
                                            <div class="card-body">
                                                <p class="card-title"> Speed-Giày nam giá hot </p>
                                            </div>
                                        </a>
                                    </div>
                                </div>


                            </div>
                        </div>


                    </div>
                </div>
            </div>

        </div>


        <div class="row mt-5">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="row">
                    <h3> Tin liên quan </h3>
                </div>
                <div class="row mt-2 Tin-lien-quan">

                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 ">
                        <div class="card card-Common-responsive">
                            <a asp-action="DetailsTTLTD" asp-route-id="@Model.Tintucs[0].IdTinTuc">
                                <img class="card-img-top img-TT" src="@Model.Tintucs[0].Avatar" />
                                <div class="card-body">
                                    <p class="card-title"> @Model.Tintucs[0].TieuDe </p>
                                </div>
                            </a>
                        </div>
                    </div>

                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 ">
                        <div class="card card-Common-responsive">
                            <a asp-action="DetailsTTLTD" asp-route-id="@Model.Tintucs[1].IdTinTuc">
                                <img class="card-img-top img-TT" src="@Model.Tintucs[1].Avatar" />
                                <div class="card-body">
                                    <p class="card-title"> @Model.Tintucs[1].TieuDe </p>
                                </div>
                            </a>
                        </div>
                    </div>

                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <div class="card card-Common-responsive">
                            <a asp-action="DetailsTTLTD" asp-route-id="@Model.Tintucs[2].IdTinTuc">
                                <img class="card-img-top img-TT" src="@Model.Tintucs[2].Avatar" />
                                <div class="card-body">
                                    <p class="card-title"> @Model.Tintucs[2].TieuDe </p>
                                </div>
                            </a>
                        </div>
                    </div>

                </div>

                <div class="row mt-3 Tin-lien-quan">

                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <div class="card card-Common-responsive">
                            <a asp-action="DetailsTTLTD" asp-route-id="@Model.Tintucs[3].IdTinTuc">
                                <img class="card-img-top img-TT" src="@Model.Tintucs[3].Avatar" />
                                <div class="card-body">
                                    <p class="card-title"> @Model.Tintucs[3].TieuDe </p>
                                </div>
                            </a>
                        </div>
                    </div>

                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <div class="card card-Common-responsive">
                            <a asp-action="DetailsTTLTD" asp-route-id="@Model.Tintucs[4].IdTinTuc">
                                <img class="card-img-top img-TT" src="@Model.Tintucs[4].Avatar" />
                                <div class="card-body">
                                    <p class="card-title"> @Model.Tintucs[4].TieuDe </p>
                                </div>
                            </a>
                        </div>
                    </div>

                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <div class="card card-Common-responsive">
                            <a asp-action="DetailsTTLTD" asp-route-id="@Model.Tintucs[5].IdTinTuc">
                                <img class="card-img-top img-TT" src="@Model.Tintucs[5].Avatar" />
                                <div class="card-body">
                                    <p class="card-title"> @Model.Tintucs[5].TieuDe </p>
                                </div>
                            </a>
                        </div>
                    </div>

                </div>
            </div>

        </div>


    </div>
    <script>
        $(document).ready(function () {
            $("#datepicker").on("Select", function () {
                var value = $(this).val().toLowerCase();
                $("#mytable tr").filter(function () {
                    $(this).toggle($(this).datepicker().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>


</body>
</html>